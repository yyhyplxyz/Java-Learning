<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller">
    <top>
        <HBox>
            <TextField promptText="    " fx:id="calctf"
                       prefHeight="80" prefWidth="80" style="-fx-font:20 Arial" />
            <TextField promptText=" + " fx:id="operand"
                       prefHeight="80" prefWidth="80" style="-fx-font:20 Arial" disable="true"/>
            <TextField promptText="    " fx:id="calctf3"
                       prefHeight="80" prefWidth="80" style="-fx-font:20 Arial" />
            <TextField promptText="="
                       prefHeight="80" prefWidth="80" style="-fx-font:20 Arial" disable="true"/>

            <TextField promptText="   " fx:id="res"
                       prefHeight="80" prefWidth="80" style="-fx-font:20 Arial" disable="true"/>

        </HBox>

    </top>
    <bottom>
        <HBox>
            <Button text="+" onAction="#Click" style="-fx-alignment: center; -fx-font:22 Arial" prefHeight="80"
                    prefWidth="80"/>
            <Button text="-" onAction="#Click" style="-fx-alignment: center; -fx-font:22 Arial" prefHeight="80"
                    prefWidth="80"/>
            <Button text="*" onAction="#Click" style="-fx-alignment: center; -fx-font:22 Arial" prefHeight="80"
                    prefWidth="80"/>
            <Button text="/" onAction="#Click" style="-fx-alignment: center; -fx-font:22 Arial" prefHeight="80"
                    prefWidth="80"/>
            <Button text="OK" onAction="#getres" style="-fx-alignment: center; -fx-font:22 Arial" prefHeight="80"
                    prefWidth="80"/>

        </HBox>

    </bottom>
</BorderPane>